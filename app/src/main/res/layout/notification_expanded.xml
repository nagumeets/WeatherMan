<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="64dp">

        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:layout_alignParentStart="true"
                      android:layout_marginEnd="8dp">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/notification_city_name"
                      android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
                      android:textAlignment="center"
                      android:textSize="12sp" android:textStyle="bold"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <ImageView android:layout_width="40dp" android:layout_height="wrap_content"
                           android:id="@+id/notification_icon"
                           android:src="@android:drawable/sym_def_app_icon"
                           android:contentDescription="@string/weather_icon"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/notification_temp"
                          android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
                          android:gravity="center_vertical" android:layout_gravity="center_vertical"
                          android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:textSize="12sp"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/notification_max_temp"
                          android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
                          android:gravity="center_vertical" android:layout_gravity="center_vertical"
                          android:layout_marginStart="8dp" android:textSize="12sp"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
                          android:text="@string/forward_slash"
                          android:gravity="center_vertical" android:layout_gravity="center_vertical"
                          android:layout_marginStart="4dp"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/notification_min_temp"
                          android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
                          android:gravity="center_vertical" android:layout_gravity="center_vertical"
                          android:layout_marginStart="4dp" android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                      android:orientation="vertical" android:layout_gravity="end"
                      android:layout_alignParentEnd="true">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/notification_description"
                      android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
                      android:textSize="12sp"
                      android:textAlignment="center" android:layout_marginBottom="4dp"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="8dp">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
                          android:gravity="start" android:textSize="12sp" android:textAlignment="viewStart"
                          android:paddingEnd="32dp" tools:ignore="RtlSymmetry"
                          android:text="@string/humidity_notification"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/notification_humidity"
                          android:textAppearance="@style/TextAppearance.Compat.Notification.Title"
                          android:textSize="12sp"
                          android:textAlignment="textEnd" android:layout_gravity="end"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">

        <ImageView android:layout_width="52dp" android:layout_height="52dp"
                   android:id="@+id/notification_icon_forecast1"
                   android:src="@android:drawable/sym_def_app_icon"
                   android:contentDescription="@string/weather_icon" android:layout_marginEnd="4dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/notification_temp_forecast1"
                  android:textAppearance="@style/TextAppearance.Compat.Notification.Time"
                  android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:textSize="12sp"
                  android:layout_below="@id/notification_icon_forecast1"
                  android:layout_alignStart="@+id/notification_icon_forecast1"
                  android:layout_alignEnd="@+id/notification_icon_forecast1"
                  android:gravity="center"/>

        <ImageView android:layout_width="52dp" android:layout_height="52dp"
                   android:id="@+id/notification_icon_forecast2"
                   android:src="@android:drawable/sym_def_app_icon"
                   android:contentDescription="@string/weather_icon"
                   android:layout_toEndOf="@id/notification_icon_forecast1" android:layout_marginEnd="4dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/notification_temp_forecast2"
                  android:textAppearance="@style/TextAppearance.Compat.Notification.Time"
                  android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:textSize="12sp"
                  android:layout_below="@id/notification_icon_forecast2"
                  android:layout_toEndOf="@id/notification_temp_forecast1"
                  android:layout_alignStart="@+id/notification_icon_forecast2"
                  android:layout_alignEnd="@+id/notification_icon_forecast2"
                  android:gravity="center"/>

        <ImageView android:layout_width="52dp" android:layout_height="52dp"
                   android:id="@+id/notification_icon_forecast3"
                   android:src="@android:drawable/sym_def_app_icon"
                   android:contentDescription="@string/weather_icon"
                   android:layout_toEndOf="@id/notification_icon_forecast2" android:layout_marginEnd="4dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/notification_temp_forecast3"
                  android:textAppearance="@style/TextAppearance.Compat.Notification.Time"
                  android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:textSize="12sp"
                  android:layout_below="@id/notification_icon_forecast3"
                  android:layout_toEndOf="@id/notification_temp_forecast2"
                  android:layout_alignStart="@+id/notification_icon_forecast3"
                  android:layout_alignEnd="@+id/notification_icon_forecast3"
                  android:gravity="center"/>

        <ImageView android:layout_width="52dp" android:layout_height="52dp"
                   android:id="@+id/notification_icon_forecast4"
                   android:src="@android:drawable/sym_def_app_icon"
                   android:contentDescription="@string/weather_icon"
                   android:layout_toEndOf="@id/notification_icon_forecast3" android:layout_marginEnd="4dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/notification_temp_forecast4"
                  android:textAppearance="@style/TextAppearance.Compat.Notification.Time"
                  android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:textSize="12sp"
                  android:layout_below="@id/notification_icon_forecast4"
                  android:layout_toEndOf="@id/notification_temp_forecast3"
                  android:layout_alignStart="@+id/notification_icon_forecast4"
                  android:layout_alignEnd="@+id/notification_icon_forecast4"
                  android:gravity="center"/>

        <ImageView android:layout_width="52dp" android:layout_height="52dp"
                   android:id="@+id/notification_icon_forecast5"
                   android:src="@android:drawable/sym_def_app_icon"
                   android:contentDescription="@string/weather_icon"
                   android:layout_toEndOf="@id/notification_icon_forecast4"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/notification_temp_forecast5"
                  android:textAppearance="@style/TextAppearance.Compat.Notification.Time"
                  android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:textSize="12sp"
                  android:layout_below="@id/notification_icon_forecast5"
                  android:layout_toEndOf="@id/notification_temp_forecast4"
                  android:layout_alignStart="@+id/notification_icon_forecast5"
                  android:layout_alignEnd="@+id/notification_icon_forecast5"
                  android:gravity="center"/>

    </RelativeLayout>

</LinearLayout>